<%- flash.each do |name, msg| -%>
<%= content_tag :div, msg, :id => "flash_#{name}", :class => "flash_messages alert" unless msg.blank? %>
<%= content_tag :script, :type => "text/javascript" do -%>
$("#flash_<%= name %>").delay(5000).fadeOut(1250, function() {$(this).remove();});
$("#flash_<%= name %>").click(function(){$(this).remove();});
<% end %>
<% end %>


